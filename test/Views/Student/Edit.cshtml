@model Student;
@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mt-3 mb-3">Edit</h1>

<form method="POST" asp-controller="Student" asp-action="Edit">
    <div class="form-group" >
        <label asp-for="Name" class="mt-3" ></label>
            <input type="text" asp-for="Name" class="form-control mt-3 mb-3"/>
            <span asp-validation-for="Name" class="text-danger" ></span>
    </div>
    <div class="form-group " >
        <label asp-for="Score">       </label>
            <input type="number" asp-for="Score" class="form-control mt-3 mb-3"/>
        <span asp-validation-for="Score" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary my-2 mt-3" >Update</button>
</form>
<hr />
